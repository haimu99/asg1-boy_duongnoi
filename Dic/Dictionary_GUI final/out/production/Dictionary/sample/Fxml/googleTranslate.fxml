                  <Image url="@../images/speaker.png" />
               </image>
            </ImageView>
         </graphic></Button>
      <ImageView fitHeight="63.0" fitWidth="150.0" layoutX="198.0" layoutY="16.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/google-traductor-800x400.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
